<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#055A3D"
tools:context=".activity.DetailObjectActivity">


    <TextView
        android:id="@+id/sampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sampah"
        android:textSize="28sp"
        android:textColor="#fff"
        android:fontFamily="@font/raleway_extrabold"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/nama_sampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botol Plastik"
        android:textSize="28sp"
        android:textColor="#fff"
        android:fontFamily="@font/raleway_extrabold"
        android:layout_marginLeft="22dp"
        android:layout_below="@id/sampah"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_sampah"
        android:layout_marginTop="20dp"
        android:background="@drawable/view_detail"/>

    <ImageView
        android:id="@+id/image_object"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/view_botol" />

    <LinearLayout
        android:id="@+id/satu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/nama_sampah"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="22dp">


        <TextView
            android:id="@+id/jenis_sampah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Sampah Anorganik"
            android:textColor="#000"
            android:fontFamily="@font/raleway_bold"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/satu"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="22dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Rp"
            android:textColor="#000"
            android:fontFamily="@font/raleway_medium"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/harga_sampah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="5.000"
            android:textColor="#000"
            android:fontFamily="@font/raleway_medium"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="/kg"
            android:textColor="#000"
            android:fontFamily="@font/raleway_medium"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_object"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">

        <TextView
            android:id="@+id/deskripsi_sampah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/merah"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_emo_wonder"/>

            <TextView
                android:id="@+id/umur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="butuh 1500 tahun untuk menguraikan sampah ini"
                android:textColor="#fff"
                android:fontFamily="@font/raleway_medium"
                android:textSize="14sp" />

        </LinearLayout>





    </LinearLayout>


</RelativeLayout>