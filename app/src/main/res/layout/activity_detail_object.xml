<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailObjectActivity">


    <ImageView
        android:id="@+id/image_object"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/botol_plastik"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/gradient_object"
        android:alpha="0.8"
        />

    <TextView
        android:id="@+id/sampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/raleway_extrabold"
        android:text="Sampah"
        android:textColor="#fff"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/nama_sampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sampah"
        android:text="Botol Plastik"
        android:textColor="#fff"
        android:fontFamily="@font/raleway_extrabold"
        android:textSize="40sp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga (kg)"
        android:textColor="#fff"
        android:layout_toLeftOf="@id/line"
        android:layout_below="@id/nama_sampah"
        android:fontFamily="@font/raleway_medium"
        android:textSize="18sp"/>


    <TextView
            android:id="@+id/harga_sampah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 3.500"
            android:textColor="#fff"
            android:layout_toLeftOf="@id/line"
            android:layout_below="@id/harga"
            android:fontFamily="@font/raleway_medium"
            android:textSize="18sp"/>

        <View
            android:id="@+id/line"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/nama_sampah"
            android:layout_centerHorizontal="true"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#fff"/>

    <TextView
        android:id="@+id/text_sampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_sampah"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/line"
        android:elegantTextHeight="false"
        android:ellipsize="none"
        android:fontFamily="@font/raleway_medium"
        android:text="Sampah"
        android:textAlignment="inherit"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/jenis_sampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_sampah"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/line"
        android:elegantTextHeight="false"
        android:ellipsize="none"
        android:fontFamily="@font/raleway_medium"
        android:text="Anorganik"
        android:textAlignment="inherit"
        android:textColor="#fff"
        android:textSize="18sp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_detail_object"
        android:text="LIHAT DETAIL"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:fontFamily="@font/raleway_medium"/>


</RelativeLayout>