<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bodoamat.samkuriang.Fragment.HomeFragment">


    <ImageView
        android:id="@+id/bg_hijau"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halo, "
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_hai_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gita"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="!"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudahkan kamu menabung sampah?"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_white"
            android:padding="16dp">

            <ImageView
                android:id="@+id/icon_warning"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#EB4231" />

            <TextView
                android:id="@+id/status_nasabah"
                android:layout_toRightOf="@id/icon_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum terdaftar menjadi nasabah"
                android:textColor="#EB4231"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                />

            <LinearLayout
                android:id="@+id/btn_daftar_nasabah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="daftar"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#767676"/>

            </LinearLayout>

            <View
                android:id="@+id/horizontal_line"
                android:layout_below="@id/status_nasabah"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F5F5F5"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_line"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RP"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo Tabungan"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_line"
                android:layout_toRightOf="@id/vertical_line"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berat Sampah"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>


            <View
                android:id="@+id/vertical_line"
                android:layout_below="@id/horizontal_line"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>